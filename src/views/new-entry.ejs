<%- include('partials/header') %>

<div class="col-md-4 offset-md-4 mt-5">
    <h2 class="text-center">Write a new Entry</h2>
    <form method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Entry a New Title" required>
        </div>
        <div class="form-group">
            <label for="body">Entry Text</label>
            <textarea name="body" id="body" class="form-control" rows="3" required></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Post Entry" class="btn btn-primary btn-block">
        </div>
    </form>
</div>

<%- include('partials/footer') %>